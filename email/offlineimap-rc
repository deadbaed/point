[general]
# to get the passwords with `pass`
pythonfile = ~/.offlineimap.py
accounts = gmail
fsync = False
ui = Blinkenlights

###############################################################################
[Account gmail]
localrepository = gmail-local
remoterepository = gmail-remote

###############################################################################
[Repository gmail-local]
type = Maildir
localfolders = ~/email/gmail
sep = /

###############################################################################
[Repository gmail-remote]
type = Gmail
remoteuser = loctauxphilippe
remotepasseval = pass_gmail()
realdelete = no
ssl = true
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
sslcacertfile = /usr/local/etc/openssl/cert.pem
# select the folders TO NOT sync
folderfilter = lambda folder: folder not in ['[Gmail]/All Mail', '[Gmail]/Spam', '[Gmail]/Trash', '[Gmail]/Drafts']

###############################################################################
# to be able to use imapoffline with mutt
[mbnames]
enabled = yes
filename = ~/.mutt-mailboxes
header = "mailboxes "
peritem = "+%(accountname)s/%(foldername)s"
sep = " "
footer = "\n"
