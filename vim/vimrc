" vimrc
"
set ts=2 "tab width is 2 spaces
set sw=2 "indent with 2 spaces

set colorcolumn=80 "get a colored bar at char 80
set modeline "be able to run vim config at the end of files
set fileformat=unix "always save in unix format
set encoding=utf-8 "always use utf-8
set incsearch "highlight search result as you type it
set hlsearch "highlight all search results
set mouse=a "use the scroll wheel
filetype indent plugin on "enable identation & plugins for filetypes thing
syntax on "enable syntax color

" folders
set backupdir=~/.vim/backup// "backup folder
set directory=~/.vim/swap// "swap folder
set undodir=~/.vim/undo// "undo folder

"macros and maps
map <F2> aPhilippe Loctaux <loctauxphilippe@gmail.com><ESC><CR>
map <F3> aSigned-off-by: Philippe Loctaux <loctauxphilippe@gmail.com><ESC><CR>
map <F4> :AddHeader<CR>
map <F5> :Vaffle<CR>
map <F6> :UndotreeToggle<CR>
map <F7> gcc<ESC>

"install vim-plug if it's not installed
if empty(glob('~/.vim/autoload/plug.vim'))
  silent !curl -fLo ~/.vim/autoload/plug.vim --create-dirs
    \ https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim
endif

"start plugging stuff
call plug#begin('~/.vim/plugged')
Plug 'x4m3/vim-dhex'
Plug 'alpertuna/vim-header'
Plug 'tpope/vim-fugitive'
Plug 'godlygeek/tabular'
Plug 'mbbill/undotree'
Plug 'tpope/vim-commentary'
Plug 'tpope/vim-fugitive'
Plug 'cocopon/vaffle.vim'
Plug 'vim-airline/vim-airline'
Plug 'wakatime/vim-wakatime'
Plug 'fatih/vim-go', { 'do': ':GoUpdateBinaries' }
Plug 'editorconfig/editorconfig-vim'
call plug#end()

"vim-header stuff
let g:header_auto_add_header = 0
let g:header_field_author = 'Philippe Loctaux'
let g:header_field_author_email = 'loctauxphilippe@gmail.com'
let g:header_field_modified_by = 0
let g:header_field_timestamp = 0
let g:header_field_modified_timestamp = 0

"window navigation
"see :help key-notation
noremap <TAB> <C-W>w

"see tabs as characters
set list
set listchars=tab:>-

"no arrow keys!
"thx http://bondoer.fr
noremap <Up> <Nop>
noremap <Down> <Nop>
noremap <Left> <Nop>
noremap <Right> <Nop>

"use plain ascii for powerline
let g:airline_symbols_ascii = 1
