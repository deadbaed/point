# i3 config

# important shit to always execute
exec_always feh --bg-scale ~/.wallpaper.jpg #wallpaper
exec_always --no-startup-id nm-applet # network-manager applet
exec_always --no-startup-id dropbox # dropbox

# use windows key as mod key
set $mod Mod4

# font 
font pango:DejaVu Sans Mono 8

# drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal

# kill focused window
bindsym $mod+Shift+q kill

# program launcher
# bindsym $mod+d exec dmenu_run
# bindsym $mod+d exec --no-startup-id i3-dmenu-desktop
bindsym $mod+d exec rofi -show run

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# splitting stuff
bindsym $mod+h split h #horizontal
bindsym $mod+v split v #vertical

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
#bindsym $mod+d focus child

# spaces variables
set $space1 "1"
set $space2 "2"
set $space3 "3"
set $space4 "4"
set $space5 "5"
set $space6 "6"
set $space7 "7"
set $space8 "8"
set $space9 "9"
set $space0 "10"

# switch to space
bindsym $mod+1 space $space1
bindsym $mod+2 space $space2
bindsym $mod+3 space $space3
bindsym $mod+4 space $space4
bindsym $mod+5 space $space5
bindsym $mod+6 space $space6
bindsym $mod+7 space $space7
bindsym $mod+8 space $space8
bindsym $mod+9 space $space9
bindsym $mod+0 space $space0

# move focused container to space
bindsym $mod+Shift+1 move container to space $space1
bindsym $mod+Shift+2 move container to space $space2
bindsym $mod+Shift+3 move container to space $space3
bindsym $mod+Shift+4 move container to space $space4
bindsym $mod+Shift+5 move container to space $space5
bindsym $mod+Shift+6 move container to space $space6
bindsym $mod+Shift+7 move container to space $space7
bindsym $mod+Shift+8 move container to space $space8
bindsym $mod+Shift+9 move container to space $space9
bindsym $mod+Shift+0 move container to space $space0

# reload the configuration file
bindsym $mod+Shift+c reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -m 'Quitting i3';i3-msg exit"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3status
}

# multimedia keys
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 1 +5%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 1 -5%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 1 toggle

# brightness controls (need "light-git" from AUR)
bindsym XF86MonBrightnessUp exec light -A 05
bindsym XF86MonBrightnessDown exec light -U 05

# lock the screen
bindsym $mod+x exec i3lock -c 000000

# screenshot plz
bindsym $mod+Shift+s exec cat "phil get your script with scrot working!"
