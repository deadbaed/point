command=/usr/lib/i3blocks/$BLOCK_NAME
separator_block_width=15
markup=pango

[keyboard]

[disk]
interval=60

[keyindicator]
interval=1

[network]

[battery]
command=acpi | cut -d " " -f3-5 | sed -e "s/,//g;s/Discharging/🔋/;s/Charging/⚡/;s/Unknown/❓/;s/Full/👍/;s/ 0*/ /g;s/ :/ /g"
interval=1

[cpu_usage]
interval=1

[load_average]
interval=1

[temperature]
interval=1

[volume]

[time]
command=date +"%Y-%m-%d %H:%M:%S %Z"
interval=1
