[disk]
command=df --output=avail -m / -h | tail -1
interval=30

[caps-lock]
command=xset -q | grep Caps | awk '{ print $2, $4 }'
interval=1

[time]
command=date +"%Y-%m-%d %H:%M:%S %Z"
interval=1
