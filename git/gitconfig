[pretty]
	custom = "%C(magenta)%h %C(red)(%an) %C(yellow)%ad %C(green)%s %Creset%d"
	#                    │          │              │            │         └─ decorations (branch n stuff)
	#                    │          │              │            └─ message
	#                    │          │              └─ date (can be customized with --date)
	#                    │          └─ author name
	#                    └─ hash (abbreviated)
