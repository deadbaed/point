# Default config
set send_charset="utf-8"
set editor="vim"

# Mailcap
set mailcap_path= ~/.mutt/mailcap

# Folder hooks
folder-hook 'phil' 'source ~/.mutt/account.phil'
folder-hook 'gmail' 'source ~/.mutt/account.gmail'

# Default account
source ~/.mutt/account.phil

# Macros for switching accounts
macro index <F2> '<sync-mailbox><enter-command>source ~/.mutt/account.phil<enter><change-folder>!<enter>'
macro index <F4> '<sync-mailbox><enter-command>source ~/.mutt/account.gmail<enter><change-folder>!<enter>'

# Fetch imap email
bind index G imap-fetch-mail

# Sort by first recived
set sort=threads
set sort_browser=date
set sort_aux=reverse-last-date-received

# Color palette with Linux console and with black background.
color hdrdefault green black
color quoted brightblue black
color signature blue black
color attachment red black
color prompt brightmagenta black
color message brightred black
color error brightred black
color indicator black red
color status brightgreen blue
color tree white black
color normal white black
color markers red black
color search white black
color tilde brightmagenta black
color index brightgreen black ~F
color index red black "~N|~O"

# color body brightwhite black '\*+[^*]+\*+'
# color body brightwhite black '_+[^_]+_+'

