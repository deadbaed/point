# x4m3's zshrc
# echo cEBwaGlsaXBwZWxvY3RhdXguY29tCg== | base64 -d

# zsh and ohmyzsh
export ZSH=$HOME/.oh-my-zsh
export ZSH_CUSTOM=$HOME/point/zsh/

# path
export MANPATH="/usr/local/man:$MANPATH"
export GEM_HOME="$HOME/.gems"
export GEM_BINS="$GEM_HOME/bin:$(ruby -e 'print Gem.user_dir')/bin"
export CARGO_BINS="$HOME/.cargo/bin"
export GOPATH="$HOME/go"
export GOPATH_BINS="$GOPATH/bin"
export PATH="$HOME/bin:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:$GEM_BINS:$CARGO_BINS:$GOPATH_BINS:$PATH"

# env
export LANG=en_US.UTF-8
export TERM=xterm-256color # for osx
export EDITOR='vim'
export SSH_KEY_PATH="~/.ssh/id_rsa"
export GPG_TTY=$(tty)

# lolcommits config
export LOLCOMMITS_DEVICE=/dev/video0
export LOLCOMMITS_DIR="$HOME/yadisk/lolcommits"
