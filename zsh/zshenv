# x4m3's zshrc
# echo cEBwaGlsaXBwZWxvY3RhdXguY29tCg== | base64 -d

# zsh and ohmyzsh
export ZSH=$HOME/.oh-my-zsh
export ZSH_CUSTOM=$HOME/point/zsh/

# path
export PATH="$HOME/bin:$HOME/.local/bin:$HOME/.cargo/bin:$GEM_HOME/bin:$(ruby -e 'print Gem.user_dir')/bin:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:$PATH"
export MANPATH="/usr/local/man:$MANPATH"
export GEM_HOME="$HOME/.gems"

# env
export LANG=en_US.UTF-8
export TERM=xterm-256color
export EDITOR='vim'
export SSH_KEY_PATH="~/.ssh/id_rsa"

# lolcommits config
export LOLCOMMITS_DEVICE=/dev/video0
export LOLCOMMITS_DIR="$HOME/yadisk/lolcommits"

if [ -n "$DESKTOP_SESSION" ];then
	eval $(gnome-keyring-daemon --start)
	export SSH_AUTH_SOCK
fi
