#!/bin/zsh
# File  : .zshrc
# Author: Philippe Loctaux <loctauxphilippe@gmail.com>
# zsh config

export ZSH=$HOME/.oh-my-zsh
export ZSH_CUSTOM=$HOME/point/zsh/

export SSH_KEY_PATH="~/.ssh/dsa_id"
export PATH="$HOME/bin:$GOPATH/bin:/usr/bin:/bin:/usr/sbin:/sbin:$PATH"
export MANPATH="/usr/local/man:$MANPATH"
export EDITOR='vim'
export LANG=en_US.UTF-8
export EMAIL="loctauxphilippe@gmail.com"

export LOLCOMMITS_DIR="$HOME/Dropbox/lolcommits"
export GOPATH="$HOME/go"

DISABLE_UPDATE_PROMPT=true
ZSH_THEME="x4m3"

plugins=(
	git
	gitignore
)

source $ZSH/oh-my-zsh.sh
